{
    // 模版描述；
    "Description":"This template will create an EOS resource",
    // 此模块主要定义参数；
    "Parameters":{
        // 集群主节点的api地址;
        "ClusterURL":{
            "Type":"String",
            "Value":"http://10.255.20.121:8056/v1"
        }
    },
    // 以下为需要创建的资源；
    "Resources":[
        {
            // 使用集群UI用户名密码，创建token用于以下部署(或者使用“-t”指定集群已有的token)；
            "Name":"Token",
            "Type":"Token",
            "Action":"Create",
            "Properties":{
                "Name":"admin",
                "Password":"admin"
            }
        },
        {
            // 获取hostid为“1”的节点上面的两块未使用的“HDD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host1_HDDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"HDD",
                "Num":2,
                "HostIDs":[
                    1
                ]
            }
        },
        {
            // 获取hostid为“2”的节点上面的两块未使用的“SSD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host2_HDDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"HDD",
                "Num":2,
                "HostIDs":[
                    2
                ]
            }
        },
        {
            // 获取hostid为“3”的节点上面的两块未使用的“SSD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host3_HDDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"HDD",
                "Num":2,
                "HostIDs":[
                    3
                ]
            }
        },
        {
            // 通过以上获取的资源创建“HDD”类型为数据盘的osd（对象索引中还有一种类型的索引盘，根据实际需要进行创建）；
            "Name":"Host1_HDDosdList_Pool",
            "Type":"Osds",
            "Properties":{
                "DiskiDs":{
                    "Ref":"Host1_HDDDiskList"
                },
                "Role":"data"
            }
        },
        {
            // 通过以上获取的资源创建“HDD”类型为数据盘的osd（对象索引中还有一种类型的索引盘，根据实际需要进行创建）；
            "Name":"Host2_HDDosdList_Pool",
            "Type":"Osds",
            "Properties":{
                "DiskiDs":{
                    "Ref":"Host2_HDDDiskList"
                },
                "Role":"data"
            }
        },
        {
            // 通过以上获取的资源创建“HDD”类型为数据盘的osd（对象索引中还有一种类型的索引盘，根据实际需要进行创建）；
            "Name":"Host3_HDDosdList_Pool",
            "Type":"Osds",
            "Properties":{
                "DiskiDs":{
                    "Ref":"Host3_HDDDiskList"
                },
                "Role":"data"
            }
        },
        {
            // 此处将以上资源汇集成整型列表，声明数据类型，便于后面引用；
            "Name":"HDDDiskList_Pool",
            "Type":"IntegerList",
            "Properties":{
                "Attributes":[
                    {
                        "Ref":"Host1_HDDosdList_Pool"
                    },
                    {
                        "Ref":"Host2_HDDosdList_Pool"
                    },
                    {
                        "Ref":"Host3_HDDosdList_Pool"
                    }
                ]
            }
        },
        {
            // 将以上创建的资源创建“HDD”类型的3副本的存储池；
            "Name":"HDDPool",
            "Type":"Pool",
            "Properties":{
                "name":"HybirdPool",
                "ProtectionDomainiD":1,
                "WaitInterval":60,
                "CheckInterval":60,
                "PoolType":"replicated",
                "OsdiDs":{
                    "Ref":"HDDDiskList_Pool"
                },
                "Size":3
            }
        },
        {
            // 获取hostid为“1”的节点上面的两块未使用的“SSD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host1_SSDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"SSD",
                "Num":1,
                "HostiDs":[
                    1
                ]
            }
        },
        {
            // 获取hostid为“2”的节点上面的两块未使用的“SSD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host2_SSDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"SSD",
                "Num":1,
                "HostiDs":[
                    2
                ]
            }
        },
        {
            // 获取hostid为“3”的节点上面的两块未使用的“SSD”（磁盘是否为“HDD”或者“SSD”，可以使用"lsblk -d -o NAME,ROTA",其中为“0”的表示“SSD”，为“1”的表示“HDD”）；
            "Name":"Host3_SSDDiskList",
            "Type":"DiskList",
            "Properties":{
                "Used":false,
                "DiskType":"SSD",
                "Num":1,
                "HostiDs":[
                    3
                ]
            }
        },
        {
            // 通过获取的资源创建“SSD”类型为对象索引盘的osd；
            "Name":"Host1_indexosd",
            "Type":"Osds",
            "WaitInterval":60,
            "CheckInterval":10,
            "Properties":{
                "DiskIDs":{
                    "Ref":"Host1_SSDDiskList"
                },
                "Role":"index"
            },
            "Sleep":5
        },
        {
            // 通过获取的资源创建“SSD”类型为对象索引盘的osd；
            "Name":"Host2_indexosd",
            "Type":"Osds",
            "WaitInterval":60,
            "CheckInterval":10,
            "Properties":{
                "DiskIDs":{
                    "Ref":"Host2_SSDDiskList"
                },
                "Role":"index"
            },
            "Sleep":5
        },
        {
            // 通过获取的资源创建“SSD”类型为对象索引盘的osd；
            "Name":"Host3_indexosd",
            "Type":"Osds",
            "WaitInterval":60,
            "CheckInterval":10,
            "Properties":{
                "DiskIDs":{
                    "Ref":"Host3_SSDDiskList"
                },
                "Role":"index"
            },
            "Sleep":5
        },
        {
            // 此处将资源汇集成整型列表，声明数据类型，便于后面引用；
            "Name":"SSD_index_Pool",
            "Type":"IntegerList",
            "Properties":{
                "Attributes":[
                    {
                        "Ref":"Host1_indexosd"
                    },
                    {
                        "Ref":"Host2_indexosd"
                    },
                    {
                        "Ref":"Host3_indexosd"
                    }
                ]
            }
        },
        {
            // 将创建的资源创建“SSD”类型的3副本的对象索引池；
            "Name":"SSDindexPool",
            "Type":"Pool",
            "Properties":{
                "name":"SSDPool",
                "ProtectionDomainID":1,
                "WaitInterval":60,
                "CheckInterval":60,
                "PoolType":"replicated",
                "PoolRole":"index",
                "OsdIDs":{
                    "Ref":"SSD_index_Pool"
                },
                "Size":3
            }
        }
    ]
}